@model SubServiceAddModel
@{
    ViewData["Title"] = "Add";
}

    <section id="main-content">
        <div class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            SubService Add
                        </header>
                        <div class="panel-body">
                            <form role="form" class="form-horizontal tasi-form" asp-area="ConstructionAdmin" asp-controller="SubService" asp-action="Add" method="post" enctype="multipart/form-data">
                                <div class="form-group">

                                    <div class="col-lg-10">
                                        <input type="text" asp-for="NameAz" placeholder="NameAz" id="f-name" class="form-control">

                                    </div>
                                </div>
                                <div class="form-group">

                                    <div class="col-lg-10">
                                        <input type="text" asp-for="NameRu" placeholder="NameRu" id="f-name" class="form-control">

                                    </div>
                                </div>
                                <div class="form-group">

                                    <div class="col-lg-10">
                                        <input type="text" asp-for="NameEn" placeholder="NameEn" id="f-name" class="form-control">

                                    </div>
                                </div>

                                <div class="form-group ">

                                    <div class="col-lg-10">
                                        <textarea placeholder="TittleAz" class="form-control " id="ccomment" asp-for="ContentAz" required=""></textarea>
                                    </div>
                                </div>
                                <div class="form-group ">

                                    <div class="col-lg-10">
                                        <textarea placeholder="TittleEn" class="form-control " id="ccomment" asp-for="ContentRu" required=""></textarea>
                                    </div>
                                </div>
                                <div class="form-group ">

                                    <div class="col-lg-10">
                                        <textarea placeholder="TittleRu" class="form-control " id="ccomment" asp-for="ContentEn" required=""></textarea>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-10">
                                        <select class="form-control m-bot15" asp-for="ServiceId">
                                            @foreach (ServiceSubServiceAddView item in ViewBag.data)
                                            {
                                                <option value="@item.Id">@item.Name</option>
                                            }

                                        </select>
                                    </div>

                                </div>
                                <div class="form-group">

                                    <div class="col-lg-10">
                                        <input type="file" name="file" placeholder="Images" id="f-name" class="form-control">

                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-offset-2 col-lg-10">
                                        <button class="btn btn-success" type="submit">Submit</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </section>

