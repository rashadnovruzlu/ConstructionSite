@model SubServiceAddModel

<style>
    .add-model {
        background-color: rgb(241,242, 247);
        padding-left: 7%;
    }

        .add-model header {
            height: 30px;
            margin-top: 15px;
        }

    .add-body {
        margin-top: -10px;
    }

    .about-button:hover {
        background-color: black !important;
        border-color: black;
        color: #fff;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <section class="panel add-model">
                <header class="panel-heading">
                    SubService Add
                </header>
                <hr />
                <div class="panel-body add-body">
                    <form role="form" class="form-horizontal tasi-form" asp-area="ConstructionAdmin" asp-controller="SubService" asp-action="Add" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <div class="col-lg-11">
                                <input type="text" asp-for="NameAz" id="f-name" class="form-control" required="" placeholder="Name AZE">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-11">
                                <input type="text" asp-for="NameEn" id="f-name" class="form-control" placeholder="Name ENG">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-11">
                                <input type="text" asp-for="NameRu" id="f-name" class="form-control" placeholder="Name RU">
                            </div>
                        </div>
                        <div class="form-group ">
                            <div class="col-lg-11">
                                <textarea class="form-control " id="ccomment" asp-for="ContentAz" rows="15" required="" placeholder="Content AZE"></textarea>
                            </div>
                        </div>
                        <div class="form-group ">
                            <div class="col-lg-11">
                                <textarea class="form-control " id="ccomment" asp-for="ContentEn" rows="15" required="" placeholder="Content ENG"></textarea>
                            </div>
                        </div>
                        <div class="form-group ">
                            <div class="col-lg-11">
                                <textarea class="form-control " id="ccomment" asp-for="ContentRu" rows="15" required="" placeholder="Content RU"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-11">
                                <select asp-for="ServiceId" asp-items="@ViewBag.services"
                                        class="select2DropDown form-control" required="">
                                    <option value="1">1</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-11">
                                <input type="file" name="file" placeholder="Images" id="f-name" class="form-control" multiple="multiple">
                            </div>
                        </div>
                        <div class="form-group" style="margin-left: 72%;">
                            <div class="col-lg-offset-2 col-lg-11">
                                <button class="btn btn-success about-button" type="submit">Save</button>
                                <button class="btn btn-default cancel-button" type="button">Cancel</button>
                            </div>
                        </div>
                    </form>
                </div>
            </section>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(".cancel-button").click(function () {
            window.location.href = "/ConstructionAdmin/SubService/Index";
        })
    </script>
}