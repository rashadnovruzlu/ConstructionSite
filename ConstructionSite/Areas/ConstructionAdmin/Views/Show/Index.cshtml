@model IEnumerable<MesageViewModel>
    @{
        ViewData["Title"] = "Index";
    }

    <style type="text/css">
        .about-button:hover {
            background-color: black !important;
            border-color: black;
            color: #fff;
        }
        .delete-icon {
            color: #F0636A;
            font-size: 1.3em;
        }
        .edit-delete {
            text-align: center;
        }
    </style>

    <div  id="editable-sample_wrapper" class="panel-body" role="grid">
        <div class="row" style="float:right">
            <div class="col-lg-6"><div class="dataTables_filter" id="editable-sample_filter"><label>Search: <input type="text" aria-controls="editable-sample" class="form-control medium"></label></div></div>
        </div>
        <table class="table table-striped table-hover table-bordered dataTable" id="myTable editable-sample" aria-describedby="editable-sample_info">
            <thead>
                <tr role="row">
                    <th class="sorting_disabled" role="columnheader" rowspan="1" colspan="1" aria-label="Username" style="width: 182px;">Name</th>
                    <th class="sorting_disabled" role="columnheader" rowspan="1" colspan="1" aria-label="Username" style="width: 182px;">Email</th>
                    <th class="sorting_disabled" role="columnheader" rowspan="1" colspan="1" aria-label="Username" style="width: 182px;">Subject</th>
                    <th class="sorting_disabled" role="columnheader" rowspan="1" colspan="1" aria-label="Username" style="width: 182px;">Content</th>
                    <th class="sorting" role="columnheader" tabindex="0" aria-controls="editable-sample" rowspan="1" colspan="1" aria-label="Notes: activate to sort column ascending" style="width: 177px;">Send Date</th>
                    <th class="sorting edit-delete" role="columnheader" tabindex="0" aria-controls="editable-sample" rowspan="1" colspan="1" aria-label="Edit: activate to sort column ascending" style="width: 87px;">#</th>
                </tr>
            </thead>

            <tbody role="alert" aria-live="polite" aria-relevant="all">
                @if (Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr class="odd">
                            <td class="sorting_1 edit-delete">@item.Name</td>
                            <td class="edit-delete">@item.Email</td>
                            <td class="edit-delete">@item.Subject</td>
                            <td class="edit-delete">@item.Content</td>
                            <td class="edit-delete">@item.SendDate</td>
                            <td class="edit-delete">
                                <a class="delete delete-about" asp-area="ConstructionAdmin" asp-controller="Show" asp-action="Delete" asp-route-id="@item.id"><i class="fa fa-trash delete-icon" aria-hidden="true"></i></a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr class="odd">
                        <td class="text-style text-danger" colspan="5" asp-validation-summary="All">Hec bir Data yoxdur</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>