@model IEnumerable<ContactViewModel>

<style type="text/css">
    .button-create {
        margin-bottom: 10px;
    }

    .text-style {
        text-align: center;
        font-size: 1.2em;
    }

    .common {
        background-color: RGB(241, 242, 247) !important;
    }

    .edit-delete {
        text-align: center;
    }

    .about-button:hover {
        background-color: black !important;
        border-color: black;
        color: #fff;
    }

    .edit-icon {
        color: #6E90EC;
        padding-right: 7%;
        font-size: 1.3em;
    }
</style>

<section class="panel common">
    <header class="panel-heading">
        Contact - Table
    </header>
  
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <div class="space15"></div>
            <div id="editable-sample_wrapper" class="dataTables_wrapper form-inline" role="grid">
                <table class="table table-striped table-hover table-bordered dataTable" id="myTable editable-sample" aria-describedby="editable-sample_info">
                    <thead>
                        <tr role="row">
                            <th class="sorting_disabled" role="columnheader" rowspan="1" colspan="1" aria-label="Username" style="width: 182px;">Title</th>
                            <th class="sorting_disabled" role="columnheader" rowspan="1" colspan="1" aria-label="Username" style="width: 182px;">Content</th>
                            <th class="sorting_disabled" role="columnheader" rowspan="1" colspan="1" aria-label="Username" style="width: 182px;">Address</th>
                            <th class="sorting_disabled" role="columnheader" rowspan="1" colspan="1" aria-label="Username" style="width: 182px;">Phone Number</th>
                            <th class="sorting_disabled" role="columnheader" rowspan="1" colspan="1" aria-label="Username" style="width: 182px;">Email</th>
                            <th class="sorting edit-delete" role="columnheader" tabindex="0" aria-controls="editable-sample" rowspan="1" colspan="1" aria-label="Edit: activate to sort column ascending" style="width: 87px;">#</th>
                        </tr>
                    </thead>

                    <tbody role="alert" aria-live="polite" aria-relevant="all">

                        @if (Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr class="odd">
                                    <td class="sorting_1 edit-delete">@item.Tittle</td>
                                    <td class="edit-delete">Contact Content</td>
                                    <td class="sorting_1 edit-delete">@item.Address</td>
                                    <td class="sorting_1 edit-delete">@item.PhoneNumber</td>
                                    <td class="sorting_1 edit-delete">@item.Email</td>
                                    <td class="edit-delete">
                                        <a class="delete delete-about" asp-area="ConstructionAdmin" asp-controller="Contact" asp-action="Update" asp-route-id="@item.Id"><i class="fa fa-pencil-square-o fa-2 edit-icon" aria-hidden="true"></i></a>
                                      
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr class="odd">
                                <td class="text-style text-danger" colspan="6 " asp-validation-summary="All">Hec bir Data yoxdur</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
@section scripts{
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        })
    </script>
}