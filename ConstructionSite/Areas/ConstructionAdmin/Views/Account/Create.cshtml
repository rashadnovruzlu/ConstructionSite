@model UserViewModel
<!--main content start-->
<section id="main-content">
    <section class="wrapper">

        <!-- page start-->
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="card-header">
                        <div class="card-actions">
                            <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
                        </div>
                        <h2 class="card-title">Create New User</h2>
                    </header>
                    <div class="panel-body">
                        <div class="form">
                            <form class="cmxform form-horizontal tasi-form" asp-area="ConstructionAdmin" asp-controller="Account" asp-action="Create" id="signupForm" method="post">
                                <div class="form-group ">
                                    @Html.AntiForgeryToken()
                                    <label for="firstname" class="control-label col-lg-2">@Html.DisplayNameFor(model => model.Name)</label>
                                    <div class="col-lg-10">
                                        <input type="text" asp-for="Name" class=" form-control" placeholder="Enter a name" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label for="username" class="control-label col-lg-2">@Html.DisplayNameFor(m => m.Username)</label>
                                    <div class="col-lg-10">
                                        <input type="text" asp-for="Username" class="form-control" placeholder="Enter a username" />
                                        <span asp-validation-for="Username" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label for="email" class="control-label col-lg-2">@Html.DisplayNameFor(m => m.Email)</label>
                                    <div class="col-lg-10">
                                        <input type="text" asp-for="Email" class="form-control" placeholder="Enter a email" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label for="password" class="control-label col-lg-2">@Html.DisplayNameFor(m => m.Password)</label>
                                    <div class="col-lg-10">
                                        <input type="password" asp-for="Password" class="form-control" placeholder="Enter a password" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-offset-2 col-lg-10">
                                        <button class="btn btn-danger" type="submit">Save</button>
                                        <button class="btn btn-default cancel-button" type="button">Cancel</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </section>
            </div>
        </div>
        <!-- page end-->

    </section>
</section>
<!--main content end-->

@section scripts{
    <script>
        $(".cancel-button").click(function () {
            window.location.href = "/ConstructionAdmin/Account/Index";
        })
        
    </script>
}