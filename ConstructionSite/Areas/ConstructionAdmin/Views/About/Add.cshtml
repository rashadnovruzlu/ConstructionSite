@model AboutAddViewModel

<style>
    .add-model {
        margin-left: 20px;
        background-color: rgb(241,242, 247);
    }
    .add-model header {
        height: 30px;
        margin-top: 15px;
    }
    .add-body {
        margin-top: -10px;
    }
</style>

<div class="row">
    <div class="col-lg-12">
        <section class="panel add-model">
            <header class="panel-heading">
                Add About Elements
            </header>
            <hr />
            <div class="panel-body add-body">
                <form role="form" class="form-horizontal tasi-form" asp-area="ConstructionAdmin" asp-controller="About" asp-action="Add" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <div class="col-lg-10">
                            <input asp-for="TittleAz" id="f-name" class="form-control" placeholder="Tittle AZE">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10">
                            <input asp-for="TittleEn" id="f-name" class="form-control" placeholder="Tittle Eng">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10">
                            <input asp-for="TittleRu" id="f-name" class="form-control" placeholder="Tittle RU">
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-lg-10">
                            <textarea asp-for="ContentAz" class="form-control " id="ccomment" required="" placeholder="Content AZE"></textarea>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-lg-10">
                            <textarea asp-for="ContentEn" class="form-control " id="ccomment" required="" placeholder="Content ENG"></textarea>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-lg-10">
                            <textarea asp-for="ContentRu" class="form-control " id="ccomment" required="" placeholder="Content RU"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10">
                            <input type="file" name="FileData" placeholder="Images" id="f-name" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-success" type="submit">Submit</button>
                            <button class="btn btn-default cancel-button" type="button">Cancel</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>

@section scripts{
    <script>
        $(".cancel-button").click(function () {
            window.location.href = "/ConstructionAdmin/About/Index";
        })
    </script>
}