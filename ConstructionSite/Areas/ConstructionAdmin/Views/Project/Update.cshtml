@model ProjectUpdateViewModel

<style>
    .add-model {
        margin-left: 20px;
        background-color: rgb(241,242, 247);
    }

        .add-model header {
            height: 30px;
            margin-top: 15px;
        }

    .add-body {
        margin-top: -10px;
    }
</style>


<div class="row">
    <div class="col-lg-12">
        <section class="panel add-model">
            <header class="panel-heading">
                Portfolio Update
            </header>
            <hr />
            <div class="panel-body add-body">
                <form role="form" class="form-horizontal tasi-form" asp-area="ConstructionAdmin" asp-controller="Portfolio" asp-action="Update" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="PortfolioId" value="@Model.PortfolioId" />
                    <div class="form-group">
                        <div class="col-lg-10">
                            <input type="text" asp-for="NameAz" id="f-name" class="form-control" placeholder="Name AZE">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10">
                            <input type="text" asp-for="NameEn" id="f-name" class="form-control" placeholder="Name ENG">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10">
                            <input type="text" asp-for="NameRu" id="f-name" class="form-control" placeholder="Name RU">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10">
                            <input type="text" asp-for="ContentAz" id="f-name" class="form-control" placeholder="Content AZE">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10">
                            <input type="text" asp-for="ContentEn" id="f-name" class="form-control" placeholder="Content ENG">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10">
                            <input type="text" asp-for="ContentRu" id="f-name" class="form-control" placeholder="Content RU">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10">
                            <select asp-for="PortfolioId">
                                @foreach (var item in ViewBag.items)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10">
                            <img src="@Model.ImagePath" alt="Alternate Text" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10">
                            <input type="file" name="file" id="f-name" class="form-control" placeholder="Images">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-success" type="submit">Save</button>
                            <button class="btn btn-default cancel-button" type="button">Cancel</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>

@section scripts{
    <script>
        $(".cancel-button").click(function () {
            window.location.href = "/ConstructionAdmin/Project/Index";
        })
    </script>
}