@model ProjectUpdateViewModel

<style>
    .add-model {
        background-color: rgb(241,242, 247);
        padding-left: 7%;
    }

        .add-model header {
            height: 30px;
            margin-top: 15px;
        }

    .add-body {
        margin-top: -10px;
    }

    .about-button:hover {
        background-color: black !important;
        border-color: black;
        color: #fff;
    }

    .select-portfolio {
        width: 100%;
        height: 34px;
        border: 1px solid #e2e2e4;
        box-shadow: none;
        color: #c2c2c2;
        border-radius: 4px;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <section class="panel add-model">
                <header class="panel-heading">
                    Portfolio Update
                </header>
                <hr />
                <div class="panel-body add-body">
                    <form role="form" class="form-horizontal tasi-form" asp-area="ConstructionAdmin" asp-controller="Project" asp-action="Update" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="ProjectId" />
                        <input type="hidden" asp-for="ImageId" />
                        <div class="form-group">
                            <div class="col-lg-11">
                                <input type="text" asp-for="NameAz" id="f-name" class="form-control" placeholder="Name AZE">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-11">
                                <input type="text" asp-for="NameEn" id="f-name" class="form-control" placeholder="Name ENG">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-11">
                                <input type="text" asp-for="NameRu" id="f-name" class="form-control" placeholder="Name RU">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-11">
                                <textarea type="text" asp-for="ContentAz" rows="15" id="f-name" class="form-control" placeholder="Content AZE"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-11">
                                <textarea type="text" asp-for="ContentEn" rows="15" id="f-name" class="form-control" placeholder="Content ENG"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-11">
                                <textarea type="text" asp-for="ContentRu" rows="15" id="f-name" class="form-control" placeholder="Content RU"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-11">
                                <select class="select-portfolio" asp-for="PortfolioId">
                                    @foreach (var item in ViewBag.items)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-11">
                                <img src="@Model.ImagePath" width="240" height="280" alt="Alternate Text" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-11">
                                <input type="file" name="file" id="f-name" class="form-control" placeholder="Images">
                            </div>
                        </div>
                        <div class="form-group" style="margin-left: 72%;">
                            <div class="col-lg-offset-2 col-lg-11">
                                <button class="btn btn-success about-button" type="submit">Save</button>
                                <button class="btn btn-default cancel-button" type="button">Cancel</button>
                            </div>
                        </div>
                    </form>
                </div>
            </section>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(".cancel-button").click(function () {
            window.location.href = "/ConstructionAdmin/Project/Index";
        })
    </script>
}