@model ProjectUpdateViewModel
@{
    ViewData["Title"] = "Update";
}

<div class="text-danger" asp-validation-summary="All"></div>

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Portfolio About
            </header>
            <div class="panel-body">
                <form role="form" class="form-horizontal tasi-form" asp-area="ConstructionAdmin" asp-controller="Portfolio" asp-action="Update" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="PortfolioId" value="@Model.PortfolioId" />
                    <div class="form-group">

                        <div class="col-lg-10">
                            <input type="text" asp-for="NameAz" id="f-name" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">

                        <div class="col-lg-10">
                            <input type="text" asp-for="NameRu" id="f-name" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">

                        <div class="col-lg-10">
                            <input type="text" asp-for="NameEn" id="f-name" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">

                        <div class="col-lg-10">
                            <input type="text" asp-for="ContentAz" id="f-name" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">

                        <div class="col-lg-10">
                            <input type="text" asp-for="ContentRu" id="f-name" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">

                        <div class="col-lg-10">
                            <input type="text" asp-for="ContentEn" id="f-name" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">

                        <div class="col-lg-10">
                            <select asp-for="PortfolioId">
                                @foreach (var item in ViewBag.items)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">

                        <div class="col-lg-10">
                            <img src="@Model.ImagePath" alt="Alternate Text" />
                        </div>
                    </div>
                    <div class="form-group">

                        <div class="col-lg-10">
                            <input type="file" name="file" id="f-name" class="form-control">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-success" type="submit">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>