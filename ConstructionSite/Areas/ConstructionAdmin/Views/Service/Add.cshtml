<style>
    .add-model {
        margin-left: 20px;
        background-color: rgb(241,242, 247);
    }

        .add-model header {
            height: 30px;
            margin-top: 15px;
        }

    .add-body {
        margin-top: -10px;
    }
</style>

        <div class="row">
            <div class="col-lg-12">
                <section class="panel add-model">
                    <header class="panel-heading">
                        Service Add
                    </header>
                    <hr />
                    <div class="panel-body add-body">
                        <form role="form" class="form-horizontal tasi-form" asp-area="ConstructionAdmin" asp-controller="Service" asp-action="Add" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <div class="col-lg-10">
                                    <input type="text" name="NameAz" placeholder="Name AZE" id="f-name" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-10">
                                    <input type="text" name="NameEn" placeholder="Name ENG" id="f-name" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-10">
                                    <input type="text" name="NameRu" placeholder="Name RU" id="f-name" class="form-control">
                                </div>
                            </div>
                            <div class="form-group ">
                                <div class="col-lg-10">
                                    <input placeholder="Tittle AZE" class="form-control " id="ccomment" name="TittleAz" required="" />
                                </div>
                            </div>
                            <div class="form-group ">
                                <div class="col-lg-10">
                                    <input placeholder="Tittle ENG" class="form-control " id="ccomment" name="TittleEn" required="" />
                                </div>
                            </div>
                            <div class="form-group ">

                                <div class="col-lg-10">
                                    <input placeholder="Tittle RU" class="form-control " id="ccomment" name="TittleRu" required="" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-10">
                                    <input type="file" name="FileData" placeholder="Images" id="f-name" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-offset-2 col-lg-10">
                                    <button class="btn btn-success" type="submit">Save</button>
                                    <button class="btn btn-default cancel-button" type="button">Cancel</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </section>
            </div>
        </div>

@section scripts{
    <script>
        $(".cancel-button").click(function () {
            window.location.href = "/ConstructionAdmin/Service/Index";
        })
    </script>
}