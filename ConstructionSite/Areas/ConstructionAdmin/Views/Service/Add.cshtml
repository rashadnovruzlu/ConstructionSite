@model ServiceAddViewModel
<style>
    .add-model {
        background-color: rgb(241,242, 247);
        padding-left: 7%;
    }

        .add-model header {
            height: 30px;
            margin-top: 15px;
        }

    .add-body {
        margin-top: -10px;
    }

    .about-button:hover {
        background-color: black !important;
        border-color: black;
        color: #fff;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <section class="panel add-model">
                <header class="panel-heading">
                    Service Add
                </header>
                <hr />
                <div class="panel-body add-body">
                    <form role="form" class="form-horizontal tasi-form" asp-area="ConstructionAdmin" asp-controller="Service" asp-action="Add" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <div class="col-lg-11">
                                <input type="text" asp-for="NameAz" placeholder="Name AZE" id="f-name" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-11">
                                <input type="text" asp-for="NameEn" placeholder="Name ENG" id="f-name" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-11">
                                <input type="text" asp-for="NameRu" placeholder="Name RU" id="f-name" class="form-control">
                            </div>
                        </div>
                        <div class="form-group ">
                            <div class="col-lg-11">
                                <textarea placeholder="Tittle AZE" rows="15" class="form-control " id="ccomment" asp-for="TitleAz" required=""></textarea>
                            </div>
                        </div>
                        <div class="form-group ">
                            <div class="col-lg-11">
                                <textarea placeholder="Tittle ENG" rows="15" class="form-control " id="ccomment" asp-for="TitleEn" required=""></textarea>
                            </div>
                        </div>
                        <div class="form-group ">
                            <div class="col-lg-11">
                                <textarea placeholder="Tittle RU" rows="15" class="form-control " id="ccomment" asp-for="TitleRu" required=""></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-11">
                                <input type="file" asp-for="FileData"  id="f-name" class="form-control">
                            </div>
                        </div>
                        <div class="form-group" style="margin-left: 72%;">
                            <div class="col-lg-offset-2 col-lg-11">
                                <button class="btn btn-success about-button" type="submit">Save</button>
                                <button class="btn btn-default cancel-button" type="button">Cancel</button>
                            </div>
                        </div>
                    </form>
                </div>
            </section>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(".cancel-button").click(function () {
            window.location.href = "/ConstructionAdmin/Service/Index";
        })
    </script>
}