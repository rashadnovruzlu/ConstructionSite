@model IEnumerable<AddSubServiceViewModel>
@{
    ViewData["Title"] = "SubService";
}

<div class="text-danger" asp-validation-summary="All"></div>

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Add About Elements
            </header>
            <div class="panel-body">
                <form role="form" class="form-horizontal tasi-form" asp-area="ConstructionAdmin" asp-controller="Image" asp-action="SubService" method="post" enctype="multipart/form-data">

                    <div class="form-group">
                        <div class="col-lg-10">
                            <select class="form-control m-bot15" name="Id">
                                @foreach (AddSubServiceViewModel item in Model)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">

                        <div class="col-lg-10">
                            <input type="file" name="file" placeholder="Images" id="f-name" class="form-control">
                        </div>
                    </div>
                   

                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-success" type="submit">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>

