@model PortfolioAddModel
@{
    ViewData["Title"] = "Add";
}

<div class="text-danger" asp-validation-summary="All"></div>

<section id="main-content">
    <div class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Portfolio Add
                    </header>
                    <div class="panel-body">
                        <form role="form" class="form-horizontal tasi-form" asp-area="ConstructionAdmin" asp-controller="Portfolio" asp-action="Add" method="post">
                            <div class="form-group">
                                <div class="col-lg-10">
                                    <input type="text" asp-for="NameAz" placeholder="Name AZE" id="f-name" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-10">
                                    <input type="text" asp-for="NameEn" placeholder="Name ENG" id="f-name" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-10">
                                    <input type="text" asp-for="NameRu" placeholder="Name RU" id="f-name" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-offset-2 col-lg-10">
                                    <button class="btn btn-success" type="submit">Submit</button>
                                    <button class="btn btn-default cancel-button" type="button">Cancel</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>

@section scripts{
<script>
        $(".cancel-button").click(function () {
            window.location.href = "/ConstructionAdmin/Portfolio/Index";
        })
</script>
}