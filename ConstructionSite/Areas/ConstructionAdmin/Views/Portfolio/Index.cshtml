@model IEnumerable<PortfolioViewModel>
@{
    ViewData["Title"] = "Index";
}

<style type="text/css">
    .button-create {
        margin-bottom: 10px;
    }
    .text-style {
        text-align: center;
        font-size: 1.2em;
    }
    .common {
        background-color: RGB(241, 242, 247) !important;
    }
    .edit-delete {
        text-align: center;
    }

    .about-button:hover {
        background-color: black !important;
        border-color: black;
        color: #fff;
    }
    .img-style {
        text-align: center;
    }
</style>

<section class="panel common">
    <header class="panel-heading">
        Portfolio Elements Table
    </header>
    <hr />
    <div class="panel-body">
        <div class="button-create">
            <a asp-area="ConstructionAdmin" asp-controller="Portfolio" asp-action="Add" class="btn about-button" style="color: #fff; background-color: #ffc925;">Create New Portfolio Element</a>
        </div>
        <div class="adv-table editable-table ">
            <div class="space15"></div>
            <div id="editable-sample_wrapper" class="dataTables_wrapper form-inline" role="grid">
                <table class="table table-striped table-hover table-bordered dataTable" id="myTable editable-sample" aria-describedby="editable-sample_info">
                    <thead>
                        <tr role="row">
                            <th class="sorting_disabled" role="columnheader" rowspan="1" colspan="1" aria-label="Username" style="width: 182px;">Name</th>
                            <th class="sorting edit-delete" role="columnheader" tabindex="0" aria-controls="editable-sample" rowspan="1" colspan="1" aria-label="Edit: activate to sort column ascending" style="width: 87px;">#</th>
                        </tr>
                    </thead>

                    <tbody role="alert" aria-live="polite" aria-relevant="all">
                        @if (Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr class="odd">
                                    <td class="img-style">@item.Name</td>
                                    <td class="edit-delete">
                                        <i class="fa fa-pencil-square-o fa-2" aria-hidden="true">
                                            <a class="edit" asp-area="ConstructionAdmin" asp-controller="Portfolio" asp-action="Update" asp-route-id="@item.Id">Edit</a>
                                        </i>|
                                        <i class="fa fa-trash" aria-hidden="true">
                                            <a class="delete delete-about" asp-area="ConstructionAdmin" asp-controller="Portfolio" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                            </i>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr class="odd">
                                <td class="text-style text-danger" colspan="5" asp-validation-summary="All">Hec bir Data yoxdur</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

@section scripts{ 
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        })
    </script>
}