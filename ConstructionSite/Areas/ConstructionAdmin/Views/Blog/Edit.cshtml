@model BlogEditModel

    <style>
        .add-model {
            margin-left: 20px;
            background-color: rgb(241,242, 247);
        }

            .add-model header {
                height: 30px;
                margin-top: 15px;
            }

        .add-body {
            margin-top: -10px;
        }
    </style>

    <div class="row">
        <div class="col-lg-12">
            <section class="panel add-model">
                <header class="panel-heading">
                    Update About
                </header>
                <hr />
                <div class="panel-body add-body">
                    <form role="form" class="form-horizontal tasi-form" asp-area="ConstructionAdmin" asp-controller="Blog" asp-action="Edit" method="post" enctype="multipart/form-data">
                        @*<input type="hidden" name="Id" value="@Model.Id" /> *@
                        <input type="hidden" name="NewsId" value="@Model.NewsId" />
                        <input type="hidden" name="imageId" value="@Model.ImageId" />
                        <div class="form-group">
                            <div class="col-lg-10">
                                <input type="text" asp-for="TittleAz" id="f-name" class="form-control" placeholder="Title AZE">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-10">
                                <input type="text" asp-for="TittleEn" id="f-name" class="form-control" placeholder="Title ENG">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-10">
                                <input type="text" asp-for="TittleRu" id="f-name" class="form-control" placeholder="Title RU">
                            </div>
                        </div>
                        <div class="form-group ">
                            <div class="col-lg-10">
                                <textarea asp-for="ContentAz" class="form-control " id="ccomment" placeholder="Content AZE"></textarea>
                            </div>
                        </div>
                        <div class="form-group ">
                            <div class="col-lg-10">
                                <textarea asp-for="ContentEn" class="form-control " id="ccomment" placeholder="Content ENG"></textarea>
                            </div>
                        </div>
                        <div class="form-group ">
                            <div class="col-lg-10">
                                <textarea asp-for="ContentRu" class="form-control " id="ccomment" placeholder="Content RU"></textarea>
                            </div>
                        </div>
                        <div class="form-group ">
                            <div class="col-lg-10">
                                <img src="@Model.Image" width="60" height="70" alt="Alternate Text" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-10">
                                <input type="file" name="file" placeholder="Images" id="f-name" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-success" type="submit">Save</button>
                                <button class="btn btn-default cancel-button" type="button">Cancel</button>
                            </div>
                        </div>
                    </form>
                </div>
            </section>
        </div>
    </div>

    @section scripts{
        <script>
            $(".cancel-button").click(function () {
                window.location.href = "/ConstructionAdmin/Blog/Index";
            })
        </script>
    }