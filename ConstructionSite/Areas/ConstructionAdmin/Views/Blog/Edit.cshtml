@model BlogEditModel

<style>
    .add-model {
        background-color: rgb(241,242, 247);
        padding-left: 7%;
    }

        .add-model header {
            height: 30px;
            margin-top: 15px;
        }

    .add-body {
        margin-top: -10px;
    }

    .about-button:hover {
        background-color: black !important;
        border-color: black;
        color: #fff;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <section class="panel add-model">
                <header class="panel-heading">
                    Update About
                </header>
                <hr />
                <div class="panel-body add-body">
                    <form role="form" class="form-horizontal tasi-form" asp-area="ConstructionAdmin" asp-controller="Blog" asp-action="Edit" method="post" enctype="multipart/form-data">
                        @*<input type="hidden" name="Id" value="@Model.Id" /> *@
                        
                        <div class="form-group">
                            <div class="col-lg-11">
                                <input type="text" asp-for="TittleAz" id="f-name" class="form-control" placeholder="Title AZE">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-11">
                                <input type="text" asp-for="TittleEn" id="f-name" class="form-control" placeholder="Title ENG">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-11">
                                <input type="text" asp-for="TittleRu" id="f-name" class="form-control" placeholder="Title RU">
                            </div>
                        </div>
                        <div class="form-group ">
                            <div class="col-lg-11">
                                <textarea asp-for="ContentAz" rows="15" class="form-control " id="ccomment" placeholder="Content AZE"></textarea>
                            </div>
                        </div>
                        <div class="form-group ">
                            <div class="col-lg-11">
                                <textarea asp-for="ContentEn" rows="15" class="form-control " id="ccomment" placeholder="Content ENG"></textarea>
                            </div>
                        </div>
                        <div class="form-group ">
                            <div class="col-lg-11">
                                <textarea asp-for="ContentRu" rows="15" class="form-control " id="ccomment" placeholder="Content RU"></textarea>
                            </div>
                        </div>
                        <div class="wrapper--preview">

                            @foreach (var item in Model.Images)
                            {
                                <div class="box">
                                    <div class="js--image-preview">
                                        <img src="@item.Path" alt="Alternate Text" />
                                    </div>
                                    <div class="upload-options">

                                        <label>
                                            <input type="file" class="image-upload" accept="image/*" />
                                        </label>
                                    </div>
                                </div>
                            }


                         

                           

                        </div>
                        <div class="form-group" style="margin-left: 72%;">
                            <div class="col-lg-offset-2 col-lg-11">
                                <button class="btn btn-success about-button" type="submit">Save</button>
                                <button class="btn btn-default cancel-button" type="button">Cancel</button>
                            </div>
                        </div>
                    </form>
                </div>
            </section>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(".cancel-button").click(function () {
            window.location.href = "/ConstructionAdmin/Blog/Index";
        })
    </script>
}