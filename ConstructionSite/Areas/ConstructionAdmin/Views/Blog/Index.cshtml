@model IEnumerable<BlogViewModel>

@{
    ViewData["Title"] = "Index";
}

<style type="text/css">
    .button-create {
        margin-bottom: 10px;
    }
    .text-style {
        text-align: center;
        font-size: 1.2em;
    }
    .common {
        background-color: RGB(241, 242, 247) !important;
    }
    .edit-delete {
        text-align: center;
    }

    .about-button:hover {
        background-color: black !important;
        border-color: black;
        color: #fff;
    }
    .img-style {
        text-align: center;
    }
    .edit-icon {
        color: #6E90EC;
        padding-right: 7%;
        font-size: 1.3em;
    }
    .delete-icon {
        color: #F0636A;
        font-size: 1.3em;
    }
</style>

<section class="panel common">
    <header class="panel-heading">
        News Elements Table
    </header>
    <hr />
    <div class="panel-body">
        <div class="button-create">
            <a asp-area="ConstructionAdmin" asp-controller="Blog" asp-action="Create" class="btn about-button" style="color: #fff; background-color: #ffc925;">Create New News Element</a>
        </div>
        <div class="adv-table editable-table ">
            <div class="space15"></div>
            <div id="editable-sample_wrapper" class="dataTables_wrapper form-inline" role="grid">
                <table class="table table-striped table-hover table-bordered dataTable" id="myTable editable-sample" aria-describedby="editable-sample_info">
                    <thead>
                        <tr role="row">
                            <th class="sorting_disabled" role="columnheader" rowspan="1" colspan="1" aria-label="Username" style="width: 182px;">Title</th>
                            <th class="sorting_disabled" role="columnheader" rowspan="1" colspan="1" aria-label="Username" style="width: 182px;">Content</th>
                            <th class="sorting_disabled" role="columnheader" rowspan="1" colspan="1" aria-label="Username" style="width: 182px;">Image</th>
                            <th class="sorting_disabled" role="columnheader" rowspan="1" colspan="1" aria-label="Username" style="width: 182px;">Create Date</th>
                            <th class="sorting edit-delete" role="columnheader" tabindex="0" aria-controls="editable-sample" rowspan="1" colspan="1" aria-label="Edit: activate to sort column ascending" style="width: 87px;">#</th>
                        </tr>
                    </thead>

                    <tbody role="alert" aria-live="polite" aria-relevant="all">
                        @if (Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr class="odd">
                                    <td class="img-style">@item.Title</td>
                                    <td class="img-style">Blog Content</td>
                                    <td class="img-style"><img width="60" height="60" src="@item.Imagepath" alt="Alternate Text" /></td>
                                    <td class="img-style">@item.CreateDate</td>
                                    <td class="edit-delete area-margin">
                                        <a class="edit" asp-area="ConstructionAdmin" asp-controller="Blog" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil-square-o fa-2 edit-icon" aria-hidden="true"></i></a> 
                                        <a class="delete delete-about" asp-area="ConstructionAdmin" asp-controller="Blog" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash delete-icon" aria-hidden="true"></i></a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr class="odd">
                                <td class="text-style text-danger" colspan="6" asp-validation-summary="All">Hec bir Data yoxdur</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

@section scripts{
    <script>
        $(".delete-blog").click(function () {
            var id = $(this).data("id");
            $.ajax({
                type: 'GET',
                url: '/ConstructionAdmin/Blog/Delete/' + id,
                success: function () {
                    window.location.href ="/ConstructionAdmin/Blog"
                }
            })
        });
    </script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        })
    </script>
}