@model BlogCreateModel

@{
    ViewData["Title"] = "Add";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Create News Elements
            </header>
            <div class="panel-body">
                <form role="form" class="form-horizontal tasi-form" asp-area="ConstructionAdmin" asp-controller="Blog" asp-action="Create" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger">Please fix the error.</div>
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <div class="col-lg-10">
                            <input type="text" asp-for="TittleAz" placeholder="TittleAz" id="f-name" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10">
                            <input type="text" asp-for="TittleEn" placeholder="TittleEn" id="f-name" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10">
                            <input type="text" asp-for="TittleRu" placeholder="TittleRu" id="f-name" class="form-control">
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-lg-10">
                            <textarea asp-for="ContentAz" placeholder="ContentAz" class="form-control " id="ccomment" required=""></textarea>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-lg-10">
                            <textarea asp-for="ContentEn" placeholder="ContentEn" class="form-control " id="ccomment" required=""></textarea>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-lg-10">
                            <textarea asp-for="ContentRu" placeholder="ContentRu" class="form-control " id="ccomment" required=""></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10">
                            <input type="file" asp-for="Img" placeholder="Images" id="f-name" class="form-control">

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10">
                            <input size="16" type="text" asp-for="CreateDate" value="2012-06-15 14:45" readonly class="form_datetime form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-success" type="submit">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>


