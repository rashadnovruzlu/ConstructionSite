@model GaleryAddViewModel
@{
    ViewData["Title"] = "Add";
}

<style>
    .add-model {
        background-color: rgb(241,242, 247);
        padding-left: 7%;
    }

        .add-model header {
            height: 30px;
            margin-top: 15px;
        }

    .add-body {
        margin-top: -10px;
    }

    .about-button:hover {
        background-color: black !important;
        border-color: black;
        color: #fff;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <section class="panel add-model">
                
              
                <hr />
                <div class="panel-body add-body">
                    <form role="form" class="form-horizontal tasi-form" asp-area="ConstructionAdmin" asp-controller="Galery" asp-action="Add" method="post" enctype="multipart/form-data">
                      
                        <div class="col-md-6">
                            <header class="panel-heading" style="padding: 2px 0px">
                                Create News Image
                            </header>
                            <div class="form-group">
                                <div class="col-lg-11">
                                    <input asp-for="viodPath" id="f-name" class="form-control" required>
                                </div>
                            </div>
                            <div class="form-group" style="margin-left: 53%;">
                                <div class="col-lg-offset-2 col-lg-12">
                                    <button class="btn btn-success about-button" type="submit">Save</button>
                                    <button class="btn btn-default cancel-button" type="button">Cancel</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <header class="panel-heading" style="padding: 2px 0px">
                                Create News Video
                            </header>
                          
                            <div class="form-group">
                                <div class="col-lg-11">
                                    <input asp-for="files" multiple="multiple" id="f-name" class="form-control" placeholder="Title RU" required>
                                </div>
                            </div>
                            <div class="form-group" style="margin-left: 53%;">
                                <div class="col-lg-offset-2 col-lg-12">
                                    <button class="btn btn-success about-button" type="submit">Save</button>
                                    <button class="btn btn-default cancel-button" type="button">Cancel</button>
                                </div>
                            </div>
                        </div>

                       
                    </form>
                </div>
            </section>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(".cancel-button").click(function () {
            window.location.href = "/ConstructionAdmin/Blog/Index";
        })
    </script>
}