@model DescriptionAddViewModel
@*@{
    ViewData["Title"] = "Add";
}*@

    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                   Descripion Add
                </header>
                <div class="panel-body">
                    <form role="form" class="form-horizontal tasi-form" asp-area="ConstructionAdmin" asp-controller="Description" asp-action="Add" method="post">
                       
                        <div class="form-group">

                            <div class="col-lg-10">
                                <input asp-for="TittleAz" id="f-name" class="form-control">

                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-lg-10">
                                <input asp-for="TittleRu" id="f-name" class="form-control">

                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-lg-10">
                                <input asp-for="TittleEn" id="f-name" class="form-control">

                            </div>
                        </div>

                        <div class="form-group ">

                            <div class="col-lg-10">
                                <textarea asp-for="ContentAz" class="form-control " id="ccomment" required=""></textarea>
                            </div>
                        </div>
                        <div class="form-group ">

                            <div class="col-lg-10">
                                <textarea asp-for="ContentRu" class="form-control " id="ccomment" required=""></textarea>
                            </div>
                        </div>
                        <div class="form-group ">

                            <div class="col-lg-10">
                                <textarea asp-for="ContentEn" class="form-control " id="ccomment" required=""></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-10">
                                <select asp-for="SubServiceID">
                                    @foreach (var item in ViewBag.items)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                </select>
                              
                            </div>

                        </div>

                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-success" type="submit">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </section>
        </div>
    </div>

