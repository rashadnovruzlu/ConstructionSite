
@{
    ViewData["Title"] = "Create";
}

<div class="text-danger" asp-validation-summary="All"></div>

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Create Role Elements
            </header>
            <div class="panel-body">
                <form role="form" class="form-horizontal tasi-form" asp-area="ConstructionAdmin" asp-controller="AdminRole" asp-action="Create" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <div class="col-lg-10">
                            <input type="text" name="Name" id="f-name" class="form-control" placeholder="Role Name" required>
                        </div>
                    </div>
                   

                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" type="submit">Save</button>
                            <button class="btn btn-default cancel-button" type="button">Cancel</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>

