@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Index";
}

<style type="text/css">
    .button-create {
        margin-bottom: 10px;
    }
    .text-style {
        text-align: center;
        font-size: 1.2em;
    }
    .common {
        margin-top: 45px !important;
        background-color: RGB(241, 242, 247) !important;
    }
    .wprt-button{
    font-family: "Montserrat", sans-serif;
    font-weight: 500;
    display: inline-block;
    padding: 0.72em 2.1em;
    letter-spacing: 2px;
    background-color: #ffc925;
    border: 2px solid #ffc925;
    color: #fff;
    -webkit-transition: all ease .238s;
    -moz-transition: all ease .238s;
    transition: all ease .238s;
    border-radius: 8%;

    }

    .wprt-button:hover {
    background-color: #252525;
    border-color: #252525;
    color: #fff
}
</style>

<section class="panel common">
    <header class="panel-heading">
        Role Elements Table
    </header>

    <div class="panel-body">
        <div class="button-create">
            <a asp-area="ConstructionAdmin" asp-controller="AdminRole" asp-action="Create" class="wprt-button">Create New Role Element</a>
        </div>
        <div class="adv-table editable-table ">
            <div class="space15"></div>
            <div id="editable-sample_wrapper" class="dataTables_wrapper form-inline" role="grid">
                <table class="table table-striped table-hover table-bordered dataTable" id="myTable editable-sample" aria-describedby="editable-sample_info">
                    <thead>
                        <tr role="row">
                            <th class="sorting_disabled" role="columnheader" rowspan="1" colspan="1" aria-label="Username" style="width: 182px;">RoleID</th>
                            <th class="sorting" role="columnheader" tabindex="0" aria-controls="editable-sample" rowspan="1" colspan="1" aria-label="Notes: activate to sort column ascending" style="width: 177px;">RoleName</th>
                            <th  class="sorting_disabled" role="columnheader" rowspan="1" colspan="1" aria-label="Username" style="width: 182px;">Users</th>
                            <th class="sorting" role="columnheader" tabindex="0" aria-controls="editable-sample" rowspan="1" colspan="1" aria-label="Edit: activate to sort column ascending" style="width: 87px;">Edit</th>
                            <th class="sorting" role="columnheader" tabindex="0" aria-controls="editable-sample" rowspan="1" colspan="1" aria-label="Delete: activate to sort column ascending" style="width: 128px;">Delete</th>
                        </tr>
                    </thead>

                    <tbody role="alert" aria-live="polite" aria-relevant="all">

                        @if (Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr class="odd">

                                <td class="sorting_1">@item.Id</td>
                                <td class=" ">@item.Name</td>
                               <td identity-Role="@item.Id"></td>
                                <td class=" "><a class="edit btn btn-primary" asp-area="ConstructionAdmin" asp-controller="About" asp-action="Update" asp-route-id="@item.Id">Edit</a></td>
                                <td class=" "><a class="btn btn-danger delete delete-about" asp-area="ConstructionAdmin" asp-controller="About" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                            </tr>
                                }
                            }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>