@model CustomerViewUpdateModel
@{
    ViewData["Title"] = "Update";
}

<style>
    .add-model {
        margin-left: 20px;
        background-color: rgb(241,242, 247);
    }

        .add-model header {
            height: 30px;
            margin-top: 15px;
        }

    .add-body {
        margin-top: -10px;
    }
    .about-button:hover {
        background-color: black !important;
        border-color: black;
        color: #fff;
    }
</style>


<div class="row">
    <div class="col-lg-12">
        <section class="panel add-model">
            <header class="panel-heading">
                Customer Update
            </header>
            <hr />
            <div class="panel-body add-body">
                <form role="form" class="form-horizontal tasi-form" asp-area="ConstructionAdmin" asp-controller="Testimonial" asp-action="Update" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <div class="form-group ">
                        <div class="col-lg-10">
                            <textarea asp-for="FullName" class="form-control " id="ccomment" placeholder="Full Name"></textarea>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-lg-10">
                            <textarea asp-for="Position" class="form-control " id="ccomment" placeholder="Position"></textarea>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-lg-10">
                            <textarea asp-for="ContentAz" class="form-control " id="ccomment" placeholder="Content AZE"></textarea>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-lg-10">
                            <textarea asp-for="ContentEn" class="form-control " id="ccomment" placeholder="Content ENG"></textarea>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-lg-10">
                            <textarea asp-for="ContentRu" class="form-control " id="ccomment" placeholder="Content RU"></textarea>
                        </div>
                    </div>
                    <div class="form-group" style="margin-left: 63%;">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-success about-button" type="submit">Save</button>
                            <button class="btn btn-default cancel-button" type="button">Cancel</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>

@section scripts{
    <script>
        $(".cancel-button").click(function () {
            window.location.href = "/ConstructionAdmin/Testimonial/Index";
        })
    </script>
}