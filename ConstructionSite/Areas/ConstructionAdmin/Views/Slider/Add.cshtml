@model SliderAddViewModel

<style>
    .add-model {
        background-color: rgb(241,242, 247);
        padding-left: 7%;
    }

        .add-model header {
            height: 30px;
            margin-top: 15px;
        }

    .add-body {
        margin-top: -10px;
    }

    .about-button:hover {
        background-color: black !important;
        border-color: black;
        color: #fff;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <section class="panel add-model">
                <header class="panel-heading">
                    Create Slider Elements
                </header>
                <hr />
                <div class="panel-body add-body">
                    <form role="form" class="form-horizontal tasi-form" asp-area="ConstructionAdmin" asp-controller="Slider" asp-action="Add" method="post" enctype="multipart/form-data">
                        <div class="form-group row">
                            <div class="col-lg-11">
                                <label class="col-sm-2 col-sm-2 control-label text-00">
                                    <h5>Tittle (Az)</h5>
                                </label>
                                <input asp-for="TittleAz" id="f-name" class="form-control" placeholder="Tittle AZE" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-sm-2 control-label text-00">
                                <h5>Tittle (En)</h5>
                            </label>
                            <div class="col-lg-11">
                                <input asp-for="TittleEn" id="f-name" class="form-control" placeholder="Tittle Eng" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-sm-2 control-label text-00">
                                <h5>Tittle (Ru)</h5>
                            </label>
                            <div class="col-lg-11">
                                <input asp-for="TittleRu" id="f-name" class="form-control" placeholder="Tittle RU" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-sm-2 control-label text-00">
                                <h5>Content (Az)</h5>
                            </label>
                            <div class="col-lg-11">
                                <textarea asp-for="ContentAz" class="form-control " id="ccomment" required=""></textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-sm-2 control-label text-00">
                                <h5>Content (En)</h5>
                            </label>
                            <div class="col-lg-11">
                                <textarea asp-for="ContentEn" class="form-control " id="ccomment1" required=""></textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-sm-2 control-label text-00">
                                <h5>Content (Ru)</h5>
                            </label>
                            <div class="col-lg-11">
                                <textarea asp-for="ContentRu" class="form-control " id="ccomment2" required=""></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-2 imgUp">
                                <div id="upload_name" class="imagePreview"></div>
                                <label class="btn btn-primary">
                                    Upload<input class="uploadFile img" asp-for="file" style="width: 0px;height: 0px;overflow: hidden;">
                                </label>
                            </div><!-- col-2 -->
                            <i class="fa fa-plus imgAddService"></i>
                        </div>
                        <div class="form-group row" style="margin-left: 72%;">
                            <div class="col-lg-offset-2 col-lg-11">
                                <button class="btn btn-success about-button" type="submit">Save</button>
                                <button class="btn btn-default cancel-button" type="button">Cancel</button>
                            </div>
                        </div>
                    </form>
                </div>
            </section>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(".cancel-button").click(function () {
            window.location.href = "/ConstructionAdmin/About/Index";
        })
    </script>
}