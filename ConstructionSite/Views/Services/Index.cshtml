@model IEnumerable<ServiceViewModel>
@inject SharedLocalizationService Localizer
@{
    ViewData["Title"] = "Index";
}

<style>
    .sekil {
        width: 100%;
        min-height: 300px;
        object-fit: cover;
    }
</style>

<!-- Main Content -->
<div>&nbsp;</div>

<div id="main-content" class="site-main clearfix">
    <div id="content-wrap">
        <div id="site-content" class="site-content clearfix">
            <div id="<inner-content></inner-content>" class="inner-content-wrap">
                <div class="page-content">
                    <section class="wprt-section">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="wprt-spacer" data-desktop="110" data-mobi="30" data-smobi="30"></div>
                                </div>
                                <!-- /.col-md-12 -->

                                <h1 style="text-align: center;">@Localizer.GetLocalizedHtmlString(RESOURCEKEYS.AllServices)</h1>
                                <div>&nbsp;</div>

                                @foreach (var item in Model)
                                {

                                    <div class="col-md-4">
                                        <div class="service-item clearfix">
                                            <div class="thumb"><img class="sekil" src="@item.image" width="370" height="300"></div>
                                            <div class="service-item-wrap">
                                                <h3 class="title font-size-18"><a asp-controller="Services" asp-action="Details" asp-route-id="@item.Id">@item.Name</a></h3>
                                                <p service-index="@item.Tittle"></p>
                                                
                                            </div>
                                        </div>
                                        <div class="wprt-spacer" data-desktop="60" data-mobi="30" data-smobi="30"></div>
                                    </div>
                                }
                                <div class="col-md-12">
                                    <div class="wprt-spacer" data-desktop="100" data-mobi="40" data-smobi="40"></div>
                                </div>
                                <!-- /.col-md-12 -->
                            </div>
                            <!-- /.row -->
                        </div>
                        <!-- /.container -->
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>