@model IEnumerable<ServiceViewModel>
@inject SharedLocalizationService Localizer

<style>
    .sekil {
        width: 370px;
        height: 300px;
    }
    
</style>

<div id="featured-title" class="clearfix featured-title-left">
    <div id="featured-title-inner" class="container clearfix">
        <div class="featured-title-inner-wrap">
            <div class="featured-title-heading-wrap">
                <h1 class="featured-title-heading">@Localizer.GetLocalizedHtmlString(RESOURCEKEYS.OurServices)</h1>
            </div>
        </div>
    </div>
</div>
<div id="main-content" class="site-main clearfix">
    <div id="content-wrap">
        <div id="site-content" class="site-content clearfix">
            <div id="<inner-content></inner-content>" class="inner-content-wrap">
                <div class="page-content">
                    <section class="wprt-section">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="wprt-spacer" data-desktop="110" data-mobi="30" data-smobi="30" style="height:110px"></div>
                                </div>
                                <!-- /.col-md-12 -->

                                @foreach (var item in Model)
                                {
                                    <div class="col-md-4">
                                        <div class="service-item clearfix">
                                            <div class="thumb"><img class="sekil" src="@item.image" width="370" height="300"></div>
                                            <div class="service-item-wrap">
                                                <h3 class="title font-size-18"><a href="service-Construction.html">@item.Name</a></h3>
                                                <p indextext="@item.Tittle"></p>
                                                <a asp-controller="Services" asp-action="Services" asp-route-id="@item.Id" class="wprt-button small rounded-3px">@Localizer.GetLocalizedHtmlString(RESOURCEKEYS.ReadMore)</a>
                                            </div>
                                        </div>
                                        <div class="wprt-spacer" data-desktop="60" data-mobi="30" data-smobi="30" style="height:60px"></div>
                                    </div>
                                 }
                                 <div class="col-md-12">
                                    <div class="wprt-spacer" data-desktop="100" data-mobi="40" data-smobi="40" style="height:100px"></div>
                                 </div>
                                <!-- /.col-md-12 -->

                            </div>
                            <!-- /.row -->
                            
                        </div>
                        <!-- /.container -->

                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

