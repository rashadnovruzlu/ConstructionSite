@inject SharedLocalizationService Localizer

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US" lang="en-US">

<head>
    <!-- Basic Page Needs -->
    <meta charset="UTF-8" />

    <title>PDC.az</title>

    <meta name="description" descriptions />
    <meta name="keywords" metapage />
    <meta name="author" content="PDC.az" />
    <!-- Mobile Specific Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />

    <!-- Theme Style -->

    <partial name="_LinkPartialStyle" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    @RenderSection("head", false)
</head>

<body class="front-page   no-sidebar site-layout-full-width menu-has-cart header-sticky header-style-5">
    <div id="top"></div>
    <div id="wrapper" class="animsition">
        <div id="page" class="clearfix">
            <div id="site-header-wrap">
                <!-- Header -->
                <header id="site-header" class="header-front-page style-5">
                    <div id="site-header-inner" class="container" style="padding-top: 1%; padding-bottom: 2%;">
                        <div class="wrap-inner">
                            <div id="site-logo" class="clearfix">
                                <div id="site-logo-inner">
                                    <a asp-controller="Home" asp-action="Index" title="Construction" rel="home" class="main-logo">
                                        <img src="~/assets/img/logo-light.png" alt="Construction" data-width="204" data-height="30" style=" position: absolute; width: 110px; height: 68px; top: 0px;  background-color: white;">
                                    </a>
                                </div>
                            </div>
                            <!-- /#site-logo -->

                            <div class="mobile-button"><span></span></div>
                            <!-- //mobile menu button -->

                            <partial name="_MainnavPartial" />
                        </div>
                        <!-- /#site-header-inner -->
                    </div>
                </header>
                <!-- /#site-header -->
            </div>

            @RenderBody()

            <!-- Footer -->
            <footer id="footer">
                <div id="footer-widgets" class="container style-1">
                    <div class="row">

                        @await Component.InvokeAsync("Adress")
                        <partial name="_UsefulLinkPartial" />
                    </div>
                </div>
            </footer>

            <!-- Bottom -->
            <partial name="_BottonPartial" />
        </div>
        <!-- /#page -->
    </div>
    <!-- /#wrapper -->

    <a id="scroll-top"><i class="fa fa-arrow-up" style="font-size: 1.9em; margin-top: 22%;"></i></a>

    <!-- Javascript -->
    <partial name="_JavascriptPartial" />

    <!-- Revolution Slider -->
    <partial name="_RevolutionPartialScripts" />
    <partial name="_LoadingPartialScripts" />
    <script type="text/javascript" src="~/customer/js/Component.js" asp-append-version="true">
    </script>
    <script type="text/javascript" src="~/customer/js/Language.js"></script>

    @RenderSection("Scrips", required: false)
</body>
</html>