@model IEnumerable<ServiceViewModel>
@inject SharedLocalizationService Localizer

<section id="team" class="wprt-section clearfix text-center">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="wprt-spacer" data-desktop="100" data-mobi="40" data-smobi="40"></div>
                <h2 class="text-center margin-bottom-20">@Localizer.GetLocalizedHtmlString(RESOURCEKEYS.Services)</h2>
                <div class="wprt-lines style-2 custom-1">
                    <div class="line-1"></div>
                </div>
                <div class="wprt-spacer" data-desktop="36" data-mobi="30" data-smobi="30"></div>
                <div class="link">
                    <a asp-controller="Services" asp-action="Index" class="wprt-button small rounded-3px">
                        @Localizer.GetLocalizedHtmlString(RESOURCEKEYS.SeeAll)
                    </a>
                </div>
                <div class="wprt-spacer" data-desktop="40" data-mobi="30" data-smobi="30"></div>
                <div class="wprt-team has-bullets bullet-style-1" data-layout="slider" data-column="4" data-column2="3" data-column3="2" data-column4="1" data-gaph="30" data-gapv="30">
                    <div id="team-wrap" class="cbp">
                        @foreach (ServiceViewModel item in Model)
                        {
                            <div class="cbp-item">
                                <div class="member">
                                    <div class="inner">
                                         <div class="images">
                                            <div class="thumb"><a  ><img src="@item.image" ></a></div>
                                         </div>
                                         <div class="service-item-wrap">
                                            <h3 class="title font-size-18"><a >@item.Name</a></h3>
                                            <p class="desc" size="@item.Tittle"></p>
                                         </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <!-- /#team-wrap -->
                </div>
                <!-- /.wprt-team -->

                @*<div class="wprt-spacer" data-desktop="100" data-mobi="40" data-smobi="40"></div>*@
            </div>
            <!-- /.col-md-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
</section>