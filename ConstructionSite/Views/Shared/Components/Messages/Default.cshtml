@model MailSend
<form class="wprt-contact-form" method="post" asp-controller="Message" asp-action="Add">
    <div class="inner">
        <div class="left-side">

            <div class="input-wrap">
                <input asp-for="From" type="email" tabindex="2" placeholder="Email *"  id="email" required>
            </div>
            <div class="input-wrap">
                <input asp-for="Subject" tabindex="4" placeholder="Subject *"  id="subject" required>
            </div>
            <div class="message-wrap">
                <textarea class="" tabindex="5" placeholder="Message *"  asp-for="Body" id="message" required></textarea>
            </div>
            <div class="send-wrap">
                <input type="submit" value="SEND MESSAGE" id="submit" name="submit" class="submit">
            </div>
        </div>
    </div>
</form>